<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tecuruapan.edu.mx.servitec.ActividadesEscolares.InformeGlobalActivity"
    tools:layout_editor_absoluteY="25dp">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp"></include>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="110dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="16dp"
        android:text="Informe Global"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_bar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="144dp"
        android:layout_height="192dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/informeglobal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="182dp"
        android:layout_height="165dp"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="20dp"
        android:text="Es el resumen de las actividades y las horas realizadas durante el total de la prestación del Servicio Social, que consta de 480 horas en un periodo mínimo de 6 meses o 960 horas en máximo un año. "
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/ev_bajar_formato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="106dp"
        android:layout_marginTop="35dp"
        android:onClick="descargarFormato"
        android:text="Descargar formato"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/ev_subir"
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_marginStart="107dp"
        android:layout_marginTop="8dp"
        android:onClick="subirDocumento"
        android:text="Subir Archivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ev_bajar_formato" />


    <TextView
        android:id="@+id/textView_estado_ot"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="44dp"
        android:text="Estado de mi archivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ev_subir" />

    <ImageView
        android:id="@+id/imagen_estado_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_revisado"
        app:layout_constraintStart_toEndOf="@+id/textView_estado_ot"
        app:layout_constraintTop_toBottomOf="@+id/ev_subir" />

</android.support.constraint.ConstraintLayout>
