<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tecuruapan.edu.mx.servitec.ActividadesEscolares.OficioTerminacionActivity"
    tools:layout_editor_absoluteY="25dp">
    tools:layout_editor_absoluteY="25dp">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp"></include>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Oficio de Terminación"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_bar" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="182dp"
        android:layout_height="165dp"
        android:layout_marginTop="30dp"
        android:text="Primero descarga y llena el formato, luego súbelo a revisión y si es aprobado, imprímelo pide que lo sellen y vuélvelo a subir."
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/ev_bajar_formato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:onClick="descargarFormato"
        android:text="Descargar formato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/ev_subir"
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:onClick="subirDocumento"
        android:text="Subir Archivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ev_bajar_formato" />


    <TextView
        android:id="@+id/textView_estado_ot"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:text="Estado de mi archivo"
        app:layout_constraintStart_toStartOf="@+id/ev_subir"
        app:layout_constraintTop_toBottomOf="@+id/ev_subir" />

    <ImageView
        android:id="@+id/imagen_estado_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_revisado"
        app:layout_constraintStart_toEndOf="@+id/textView_estado_ot"
        app:layout_constraintTop_toBottomOf="@+id/ev_subir" />

</android.support.constraint.ConstraintLayout>
