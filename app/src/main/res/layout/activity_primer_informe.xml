<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tecuruapan.edu.mx.servitec.ActividadesEscolares.PrimerInformeActivity">

    <include
        android:id="@+id/action_bar"
        layout="@layout/action_bar"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="3dp"></include>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="74dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="16dp"
        android:text="Primer Avance"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action_bar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="144dp"
        android:layout_height="192dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/informe_bimestral"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="182dp"
        android:layout_height="225dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="20dp"
        android:text="Durante la prestación del Servicio Social tendrán que rendir tres informes bimestrales de las actividades realizadas dentro de esa prestación en un tiempo no mayor de 7 días hábiles posteriores a la conclusión del bimestre."
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/ev_bajar_formato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:onClick="descargarFormato"
        android:text="Descargar formato"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <Button
        android:id="@+id/ev_subir"
        android:layout_width="171dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:onClick="subirDocumento"
        android:text="Subir Archivo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ev_bajar_formato" />

    <TextView
        android:id="@+id/textView_estado_pa"
        android:layout_width="wrap_content"
        android:layout_height="17dp"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="86dp"
        android:layout_marginTop="44dp"
        android:text="Estado de mi archivo"
        app:layout_constraintEnd_toStartOf="@+id/imagen_estado_sr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ev_subir" />

    <ImageView
        android:id="@+id/imagen_estado_sr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="98dp"
        android:layout_marginTop="29dp"
        android:src="@drawable/ic_revisado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ev_subir" />

</android.support.constraint.ConstraintLayout>
